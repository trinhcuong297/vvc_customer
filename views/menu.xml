<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   
    <record id="vvc_customer_action_form" model="ir.ui.view">
        <field name="name">customer.account.form</field>
        <field name="model">customer.account</field>
        <field name="arch" type="xml">
            <form string="Chi tiết khách hàng">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="birthday"></field>
                        <field name="phone"></field>
                        <field name="email"></field>
                        <field name="gender"></field>
                        <field name="IDCard"></field>
                        <field name="studyLevel"></field>
                        <field name="job"></field>
                        <field name="elevatorCard"></field>
                        <field name="isCompany"></field>
                        <field name="password"></field>
                        <field name="ground_ids"></field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="vvc_customer_action_tree" model="ir.ui.view">
        <field name="name">customer.account.tree</field>
        <field name="model">customer.account</field>
        <field name="arch" type="xml">
            <tree string="List khách hàng">
                <field name="id"></field>
                <field name="name"></field>
                <field name="phone"></field>
                <field name="isCompany"></field>
                <field name="building"></field>
                <field name="block"></field>
                <field name="ground_ids" widget="many2many_tags"></field>
                <field name="archiveCount"></field>
            </tree>
        </field>
    </record>

    <record id="vvc_customer_action_search" model="ir.ui.view">
        <field name="name">customer.account.search</field>
        <field name="model">customer.account</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"></field>
                <field name="id"></field>
                <field name="isCompany"></field>
                <field name="ground_ids"></field>
            </search>
        </field>
    </record>

    <record id="vvc_customer_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Khách hàng</field>
        <field name="res_model">customer.account</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- archive -->

    <record id="vvc_archive_action_form" model="ir.ui.view">
        <field name="name">customer.archive.form</field>
        <field name="model">customer.archive</field>
        <field name="arch" type="xml">
            <form string="Chi tiết đơn hàng">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="ground_ids"/>
                            <field name="block"/>
                            <field name="building"/>
                            <field name="inputTime"/>
                            <field name="outputTime"/>
                            <field name="status" />
                        </group>
                        <group>
                            <field name="inputImage" widget="image"/>
                            <field name="outputImage" widget="image"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="vvc_archive_action_tree" model="ir.ui.view">
        <field name="name">customer.archive.tree</field>
        <field name="model">customer.archive</field>
        <field name="arch" type="xml">
            <tree string="List đơn hàng" 
            decoration-success="status == 'sended'"
            decoration-info="status == 'store'"
            >
                <field name="id"/>
                <field name="user_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="inputTime"/>
                <field name="outputTime"/>
                <field name="ground_ids" widget="many2many_tags"/>
                <field name="block"/>
                <field name="building"/>
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="vvc_archive_action_search" model="ir.ui.view">
        <field name="name">customer.archive.search</field>
        <field name="model">customer.archive</field>
        <field name="arch" type="xml">
            <search>
                <field name="id"/>
                <field name="status" />
                <field name="user_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="ground_ids"/>
                <field name="block"/>
                <field name="inputTime"/>
                <field name="outputTime"/>
                <field name="building"/>
                <field name="inputImage"/>
                <field name="outputImage"/>
            </search>
        </field>
    </record>

    <record id="vvc_archive_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Hàng kí gửi</field>
        <field name="res_model">customer.archive</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- bill -->
    <record id="vvc_bill_action_form" model="ir.ui.view">
        <field name="name">customer.bill.form</field>
        <field name="model">customer.bill</field>
        <field name="arch" type="xml">
            <form string="Chi tiết hóa đơn">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="type"/>
                        <field name="total"/>
                        <field name="status" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="vvc_bill_action_tree" model="ir.ui.view">
        <field name="name">customer.bill.tree</field>
        <field name="model">customer.bill</field>
        <field name="arch" type="xml">
            <tree string="List hóa đơn">
                <field name="user_id"/>
                <field name="type"/>
                <field name="total"/>
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="vvc_bill_action_search" model="ir.ui.view">
        <field name="name">customer.bill.search</field>
        <field name="model">customer.bill</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="type"/>
                <field name="total"/>
                <field name="status" />
            </search>
        </field>
    </record>

    <record id="vvc_bill_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Hóa đơn</field>
        <field name="res_model">customer.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- error  -->
    <record id="vvc_error_action_form" model="ir.ui.view">
        <field name="name">customer.error.form</field>
        <field name="model">customer.error</field>
        <field name="arch" type="xml">
            <form string="Chi tiết hóa đơn">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="ground_ids"/>
                        <field name="block"/>
                        <field name="building"/>
                        <field name="errLocation"/>
                        <field name="desc"/>
                        <field name="imgURL"/>
                        <field name="status"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="vvc_error_action_tree" model="ir.ui.view">
        <field name="name">customer.error.tree</field>
        <field name="model">customer.error</field>
        <field name="arch" type="xml">
            <tree string="List hóa đơn" decoration-danger="status == 'err'">
                <field name="user_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="ground_ids" widget="many2many_tags"/>
                <field name="block"/>
                <field name="building"/>
                <field name="errLocation"/>
                <field name="desc"/>
                <field name="imgURL"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="vvc_error_action_search" model="ir.ui.view">
        <field name="name">customer.error.search</field>
        <field name="model">customer.error</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="ground_ids"/>
                <field name="block"/>
                <field name="building"/>
                <field name="errLocation"/>
                <field name="desc"/>
                <field name="imgURL"/>
                <field name="status"/>
            </search>
        </field>
    </record>

    <record id="vvc_error_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Báo lỗi</field>
        <field name="res_model">customer.error</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Setting -->
    <record id="vvc_building_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Tòa nhà</field>
        <field name="res_model">customer.building</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record id="vvc_block_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Block</field>
        <field name="res_model">customer.block</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <record id="vvc_ground_action_tree" model="ir.ui.view">
        <field name="name">customer.ground.tree</field>
        <field name="model">customer.ground</field>
        <field name="arch" type="xml">
            <tree string="List mặt bằng">
                <field name="name"/>
                <field name="stage"/>
                <field name="size"/>
                <field name="block"/>
                <field name="building" />
            </tree>
        </field>
    </record>
    <record id="vvc_ground_action" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Mặt bằng</field>
        <field name="res_model">customer.ground</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <!-- menuitem -->
    <menuitem
            id="vvc_customer_root_menu"
            name="VVC Customer"
            sequence="10"/>
    <menuitem
            parent="vvc_customer_root_menu"
            id="vvc_all_customer"
            action="vvc_customer_action"
            name="Khách hàng"
            sequence="3"/>

    <menuitem
            parent="vvc_customer_root_menu"
            id="vvc_all_archive"
            action="vvc_archive_action"
            name="Đơn hàng"
            sequence="4"/>
    <menuitem
            parent="vvc_customer_root_menu"
            id="vvc_all_bill"
            action="vvc_bill_action"
            name="Hóa đơn"
            sequence="5"/>
    <menuitem
            parent="vvc_customer_root_menu"
            id="vvc_all_error"
            action="vvc_error_action"
            name="Báo lỗi"
            sequence="6"/>
    <menuitem
            parent="vvc_customer_root_menu"
            id="vvc_setting_root"
            name="Cài đặt"
            sequence="7"/>
            <menuitem
                parent="vvc_setting_root"
                id="vvc_setting_building"
                action="vvc_building_action"
                name="Tòa nhà"
                sequence="8"/>
            <menuitem
                parent="vvc_setting_root"
                id="vvc_setting_block"
                action="vvc_block_action"
                name="Block"
                sequence="9"/>
            <menuitem
                parent="vvc_setting_root"
                id="vvc_setting_ground"
                action="vvc_ground_action"
                name="Mặt bằng"
                sequence="10"/>
</odoo>